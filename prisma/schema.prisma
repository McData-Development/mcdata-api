generator client {
  provider  = "prisma-client-js"
}

datasource db {
  provider  = "mysql"
  url       = env("DATABASE_URL")
}

model User {
  id          String    @id @db.VarChar(100)
  accounts    Account[]
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt   

  @@map("users")
}

model Account {
  id            String    @id @db.VarChar(100)
  user          User      @relation(fields: [user_id], references: [id])
  user_id       String
  minecraft_id  String?
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt

  @@map("oauth_accounts")
}
